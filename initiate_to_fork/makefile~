DOBJ=obj
DINC=inc
DSRC=src
FLAGS=-Wall
OBJ=$(DOBJ)/file_processing.o $(DOBJ)/shell.o $(DOBJ)/environs_processing.o $(DOBJ)/parsing.o

shell.exe:$(OBJ)
	gcc $(FLAGS) $(DSRC)/main.c -o $(DOBJ)/main.o
	gcc $(FLAGS) $(OBJ) $(DOBJ)/main.o -o shell.exe

$(DOBJ)/file_processing.o:
	gcc $(FLAGS) $(DSRC)/file_processing.c -o $(DOBJ)/file_processing.o

$(DOBJ)/shell.o: $(DOBJ)/file_processing.o $(DOBJ)/environs_processing.o $(DOBJ)/parsing.o $(DINC)/shell.h
	gcc $(FLAGS) $(DSRC)/shell.o

$(DOBJ)/environs_processing.o:
	gcc $(FLAGS) $(DSRC)/environs_processing.c -o $<

$(DOBJ)/parsing.o:
	gcc $(FLAGS) $(DSRC)/parsing.c -o $<

create_library:
	ar -r lib_shell.a $(OBJ)

open:
	gedit ./$(DSRC)/* ./$(DINC)/* makefile 

OBJ= file_processing.o environs_processing.o real_shell.o


shell:$(OBJ)
	gcc -Wall $(OBJ) -o shell.exe

file_processing.o:
	gcc -Wall



clean:
	rm -f *.out
	rm -f *.exe
	rm -f *~
	rm -f ./$(DSRC)/*~
	rm -f ./$(DINC)/*~
	rm -f ./$(DOBJ)/*
	
